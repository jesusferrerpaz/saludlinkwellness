---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FAQItem from '../components/FAQItem.astro';
import rButtonBlue from '../assets/icons/rbutton_blue.svg';
---

<Layout
  title="Elective 2D, 3D and 4D Ultrasounds in Tampa | HD and 8K Baby Imaging"
  metaDescription="Elective 3D ultrasound Tampa, 4D ultrasound Tampa, prenatal ultrasound Tampa, and 8K imaging. Emotional bonding experiences. Book now."
>
  <Header />
  <main>
    <!-- Hero -->
    <section class="container py-5" data-aos="fade-up">
      <div class="row align-items-center">
        <div class="col-lg-6 mb-4 mb-lg-0">
          <h1 class="display-5 fw-bold mb-3">From 4D Ultrasound to 8K Baby Image</h1>
          <p class="fs-5 mb-4">Meet your baby with breathtaking clarity.</p>
          <a href="https://www.optimantra.com/optimus/patient/patientaccess/modalities?pid=aW9kcWFMNis2blNxN1Q1M0U1MHc2QT09&lid=RGI5R2o0cVJ0UXo1OEdueE9lYy9sZz09" target="_blank" class="btn btn-primary rounded-pill px-4 fw-semibold">Book Now</a>
        </div>
        <div class="col-lg-6 text-center position-relative">
          <span 
            class="hero-blur-bg"
            aria-hidden="true"
          ></span>
          <img src="/img/ultrasound/baby-ultrasound.png" class="img-fluid position-relative" alt="8K Baby Image" width="400px" data-aos="fade-left" style="z-index:1;">
        </div>
      </div>
    </section>

    <!-- 8K baby image service -->
    <section class="bg-primary-subtle py-5" data-aos="fade-up">
      <div class="container">
        <div class="text-center mb-3">
          <span class="badge rounded-0 fs-6 px-3 py-2 mb-2" style="background: #3b6ab0;">Our 8K baby image service</span>
        </div>
        <div class="row">
          <div class="text-center col-lg-8">
            <p class="text-start mb-4">
              Transforms your elective 3D/4D ultrasound into a stunning, hyper-realistic 8K baby photo you can treasure forever.
            </p>
            <p class="text-start mb-0">
              Families love this experience because the 8K baby image feels like meeting their baby for the first time, complete with soft textures, facial definition, and a lifelike sense of presence.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- The Closest Thing to Seeing our Baby Before Birth -->
    <section class="container py-4" data-aos="fade-up">
      <h3 class="fw-bold text-center mb-4">The Closest Thing to Seeing our Baby Before Birth.</h3>
      <div class="row align-items-center justify-content-center">
        <div class="col-md-6">
          <p>
            An 8K baby image is an ultra-high-resolution enhancement created from your baby’s 3D or 4D ultrasound. This 8K baby photo brings out:
          </p>
          <ul class="list-unstyled fs-6 mb-0">
            <li class="mb-2" data-aos="fade-right" data-aos-delay="0"><img src={rButtonBlue.src} class="me-2" width="18" height="18" alt="icon" />Facial curves</li>
            <li class="mb-2" data-aos="fade-right" data-aos-delay="100"><img src={rButtonBlue.src} class="me-2" width="18" height="18" alt="icon" />Natural shadows</li>
            <li class="mb-2" data-aos="fade-right" data-aos-delay="200"><img src={rButtonBlue.src} class="me-2" width="18" height="18" alt="icon" />Depth and softness</li>
            <li class="mb-2" data-aos="fade-right" data-aos-delay="300"><img src={rButtonBlue.src} class="me-2" width="18" height="18" alt="icon" />Realistic baby-like textures</li>
            <li class="mb-2" data-aos="fade-right" data-aos-delay="400"><img src={rButtonBlue.src} class="me-2" width="18" height="18" alt="icon" />A peaceful, lifelike expression</li>
          </ul>
        </div>
        <div class="col-md-6 mb-3 mb-md-0 text-center">
          <img src="/img/ultrasound/baby-8k.webp" class="img-fluid rounded-4 shadow" alt="Ultrasound Example" width="400px" data-aos="fade-left">
        </div>
      </div>
    </section>

    <!-- How the 4D to 8K Baby Image Process Works -->
    <section class="container py-4" data-aos="fade-up">
      <h3 class="fw-bold text-center mb-4">How the 4D to 8K Baby Image Process Works</h3>
      <p class="text-center">Every 2D, 3D and 4D ultrasound session can be done in English or Spanish to ensure clarity and comfort.</p>
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="d-flex justify-content-between align-items-center flex-wrap border rounded-4 py-4 gap-2 mb-2">
            <div class="border-end px-3 py-2 fw-semibold flex-fill text-center" data-aos="flip-left">Your 3D/4D</br>brultrasound session</div>
            <div class="border-end px-3 py-2 fw-semibold flex-fill text-center" data-aos="flip-left" data-aos-delay="150">Image selection</div>
            <div class="border-end px-3 py-2 fw-semibold flex-fill text-center" data-aos="flip-left" data-aos-delay="300">8K enhancement</div>
            <div class="px-3 py-2 fw-semibold flex-fill text-center" data-aos="flip-left" data-aos-delay="450">Final delivery</div>
          </div>
          <p class="text-center fw-semibold mt-3 mb-0">You receive a digital 8K baby photo (and optional print).</p>
        </div>
      </div>
    </section>

    <!-- Why Families Love Our 8K Baby Photo Experience -->
    <section class="container py-4" data-aos="fade-up">
      <h3 class="fw-bold text-center mb-4">Why Families Love Our 8K Baby Photo Experience</h3>
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="row g-4">
            <div class="col-12">
              <div class="text-center" data-aos="flip-left" data-aos-delay="0">
                <img src="/img/ultrasound/star.svg" alt="Star icon" class="mb-2" width="40" height="40">
                <h5 class="fw-bold mb-2">Hyper-realistic beauty</h5>
                <p class="mb-0">The 8K baby image shows details that traditional ultrasounds cannot capture.</p>
              </div>
            </div>
            <div class="col-12">
              <div class="text-center" data-aos="flip-left" data-aos-delay="150">
                <img src="/img/ultrasound/star.svg" alt="Star icon" class="mb-2" width="40" height="40">
                <h5 class="fw-bold mb-2">Perfect for keepsakes</h5>
                <p class="mb-0">Families frame their 8K baby photo, use it in memory books, or share it with loved ones.</p>
              </div>
            </div>
            <div class="col-12">
              <div class="text-center" data-aos="flip-left" data-aos-delay="300">
                <img src="/img/ultrasound/star.svg" alt="Star icon" class="mb-2" width="40" height="40">
                <h5 class="fw-bold mb-2">Safe and simple</h5>
                <p class="mb-0">No new scan required, your 8K baby image comes directly from your existing 3D/4D ultrasound.</p>
              </div>
            </div>
            <div class="col-12">
              <div class="text-center" data-aos="flip-left" data-aos-delay="450">
                <img src="/img/ultrasound/star.svg" alt="Star icon" class="mb-2" width="40" height="40">
                <h5 class="fw-bold mb-2">Enhances your bonding experience</h5>
                <p class="mb-0">The 8K baby photo makes your baby feel “real,” strengthening emotional connection.</p>
              </div>
            </div>
            <div class="col-12">
              <div class="text-center" data-aos="flip-left" data-aos-delay="600">
                <img src="/img/ultrasound/star.svg" alt="Star icon" class="mb-2" width="40" height="40">
                <h5 class="fw-bold mb-2">The only 8K ultrasound experience with this level of care</h5>
                <p class="mb-0">We blend technology, empathy, and artistry.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQs -->
    <section class="container py-5" data-aos="fade-up">
      <h3 class="fw-bold text-center mb-4">FAQs</h3>
      <div class="row justify-content-center g-3">
        <FAQItem 
          question="Is the 8K baby image safe?" 
          answer="Yes. It uses your existing ultrasound, no additional scanning."
          id="faqSafe"
          parentId="faqAccordionCol1"
          aos="flip-left"
          aosDelay="0"
        />
        <FAQItem 
          question="How long does it take?" 
          answer="Most families receive their 8K baby image within a short processing window."
          id="faqTime"
          parentId="faqAccordionCol2"
          aos="flip-left"
          aosDelay="150"
        />
        <FAQItem 
          question="Is this a diagnostic service?" 
          answer="No. The 8K baby photo is purely elective."
          id="faqDiagnostic"
          parentId="faqAccordionCol3"
          aos="flip-left"
          aosDelay="300"
        />
      </div>
    </section>

    <!-- Book Your 8K Baby Image Appointment -->
    <section class="blue-card-bg" data-aos="fade-up">
      <div class="container">
        <div class="row" style="min-height:340px;">
          <div class="col-lg-7 d-flex flex-column py-5">
            <h3 class="fw-bold mb-3">Book Your 8K Baby Image Appointment</h3>
            <p class="mb-3">No new scan required, your 8K baby image comes directly from your existing 3D/4D ultrasound.</p>
            <div class="mt-auto col-12 col-lg-7">
              <a href="https://www.optimantra.com/optimus/patient/patientaccess/modalities?pid=aW9kcWFMNis2blNxN1Q1M0U1MHc2QT09&lid=RGI5R2o0cVJ0UXo1OEdueE9lYy9sZz09" target="_blank" class="btn btn-warning rounded-pill px-4 py-2 text-white fw-semibold w-100">Book Your 8K Baby Image Now</a>
            </div>
            
          </div>
          <div class="col-lg-5 d-flex flex-column h-100">
            <div class="mt-auto text-center">
              <img src="/img/ultrasound/Eloika.png" class="img-fluid" alt="Book 8K Baby Image" width="260px">
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <footer>
    <Footer />
  </footer>
</Layout>

<style>
.hero-blur-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 420px;
  height: 420px;
  transform: translate(-50%, -50%);
  z-index: 0;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(47, 117, 230, 0.5) 0%, rgba(40, 65, 105, 1) 100%);
  opacity: 0.85;
  filter: blur(32px);
  pointer-events: none;
}
</style>