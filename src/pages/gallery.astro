---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout
  title="Gallery | SaludLink & Wellness Ultrasound and Medical Care Experience"
  metaDescription="Explore our gallery and discover the SaludLink & Wellness experience: ultrasound moments, modern facilities, and compassionate medical care in Tampa, Florida."
>
  <Header />
  <main>
    <section class="container py-5">

      <!-- Gallery Carousel -->
      <section class="container py-4">
        <div class="row justify-content-center mb-5">
          <div class="col-12 text-center">
            <h1 class="fw-bold mb-2">Gallery</h1>
            <p class="text-body-secondary mb-0">
              A collection of our favorite moments and memories.
            </p>
          </div>
        </div>

        <div id="galleryCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner pb-3">
            <!-- Slide 1: 8K Ultrasound -->
            <div class="carousel-item active">
              <div class="row justify-content-center g-4">
                <div class="col-12 col-md-6 col-lg-4">
                  <figure class="card border-0 shadow-sm h-100">
                    <img
                      src="/img/gallery/galeria_1.webp"
                      class="card-img-top"
                      alt="8K Ultrasound 1"
                      loading="lazy"
                      data-aos="flip-left"
                      data-aos-delay="0"
                    />
                    <figcaption class="card-body">
                      <h3 class="h6 fw-bold mb-1">8K Ultrasound</h3>
                      <p class="text-body-secondary mb-0">Ultra-realistic images capturing every detail of your baby's face.</p>
                    </figcaption>
                  </figure>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                  <figure class="card border-0 shadow-sm h-100">
                    <img
                      src="/img/gallery/galeria_2.webp"
                      class="card-img-top"
                      alt="8K Ultrasound 2"
                      loading="lazy"
                      data-aos="flip-left"
                      data-aos-delay="150"
                    />
                    <figcaption class="card-body">
                      <h3 class="h6 fw-bold mb-1">8K Ultrasound</h3>
                      <p class="text-body-secondary mb-0">Discover your baby's unique expressions and features with cutting-edge technology.</p>
                    </figcaption>
                  </figure>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                  <figure class="card border-0 shadow-sm h-100">
                    <img
                      src="/img/gallery/galeria_3.webp"
                      class="card-img-top"
                      alt="8K Ultrasound 3"
                      loading="lazy"
                      data-aos="flip-left"
                      data-aos-delay="300"
                    />
                    <figcaption class="card-body">
                      <h3 class="h6 fw-bold mb-1">8K Ultrasound</h3>
                      <p class="text-body-secondary mb-0">The highest quality for an unforgettable pregnancy memory.</p>
                    </figcaption>
                  </figure>
                </div>
              </div>
            </div>

            <!-- Slide 2: 2D Ultrasound -->
            <div class="carousel-item">
              <div class="row justify-content-center g-4">
                <div class="col-12 col-md-6 col-lg-4">
                  <figure class="card border-0 shadow-sm h-100">
                    <img
                      src="/img/gallery/galeria_4.webp"
                      class="card-img-top"
                      alt="2D Ultrasound 1"
                      loading="lazy"
                    />
                    <figcaption class="card-body">
                      <h3 class="h6 fw-bold mb-1">2D Ultrasound</h3>
                      <p class="text-body-secondary mb-0">Classic black and white images to observe your baby's development and movement.</p>
                    </figcaption>
                  </figure>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                  <figure class="card border-0 shadow-sm h-100">
                    <img
                      src="/img/gallery/galeria_5.webp"
                      class="card-img-top"
                      alt="2D Ultrasound 2"
                      loading="lazy"
                    />
                    <figcaption class="card-body">
                      <h3 class="h6 fw-bold mb-1">2D Ultrasound</h3>
                      <p class="text-body-secondary mb-0">The best way to see your baby's first movements and heartbeat.</p>
                    </figcaption>
                  </figure>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                  <figure class="card border-0 shadow-sm h-100">
                    <img
                      src="/img/gallery/galeria_6.webp"
                      class="card-img-top"
                      alt="2D Ultrasound 3"
                      loading="lazy"
                    />
                    <figcaption class="card-body">
                      <h3 class="h6 fw-bold mb-1">2D Ultrasound</h3>
                      <p class="text-body-secondary mb-0">Ideal for medical follow-up and sharing with your family.</p>
                    </figcaption>
                  </figure>
                </div>
              </div>
            </div>

            <!-- Slide 3: 3D Ultrasound -->
            <div class="carousel-item">
              <div class="row justify-content-center g-4">
                <div class="col-12 col-md-6 col-lg-4">
                  <figure class="card border-0 shadow-sm h-100">
                    <img
                      src="/img/gallery/galeria_7.webp"
                      class="card-img-top"
                      alt="3D Ultrasound 1"
                      loading="lazy"
                    />
                    <figcaption class="card-body">
                      <h3 class="h6 fw-bold mb-1">3D Ultrasound</h3>
                      <p class="text-body-secondary mb-0">See your baby in three dimensions and observe their gestures and movements.</p>
                    </figcaption>
                  </figure>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                  <figure class="card border-0 shadow-sm h-100">
                    <img
                      src="/img/gallery/galeria_8.webp"
                      class="card-img-top"
                      alt="3D Ultrasound 2"
                      loading="lazy"
                    />
                    <figcaption class="card-body">
                      <h3 class="h6 fw-bold mb-1">3D Ultrasound</h3>
                      <p class="text-body-secondary mb-0">A unique experience to meet your baby before birth.</p>
                    </figcaption>
                  </figure>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                  <figure class="card border-0 shadow-sm h-100">
                    <img
                      src="/img/gallery/galeria_9.webp"
                      class="card-img-top"
                      alt="3D Ultrasound 3"
                      loading="lazy"
                    />
                    <figcaption class="card-body">
                      <h3 class="h6 fw-bold mb-1">3D Ultrasound</h3>
                      <p class="text-body-secondary mb-0">Three-dimensional memories for a lifetime.</p>
                    </figcaption>
                  </figure>
                </div>
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-center gap-2 mt-3">
            <button
              class="btn btn-outline-primary-subtle btn-sm"
              type="button"
              data-bs-target="#galleryCarousel"
              data-bs-slide="prev"
            >
              Prev
            </button>
            <button
              class="btn btn-outline-primary-subtle btn-sm"
              type="button"
              data-bs-target="#galleryCarousel"
              data-bs-slide="next"
            >
              Next
            </button>
          </div>
        </div>
      </section>
  </main>
  <Footer />
</Layout>